        android:layout_marginTop="20dp"
        android:background="#4CAF50"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#4CAF50"
        android:onClick="resetGame"
